{% extends "backend/base.html" %}

{% block scripts %}
<style>
	.ui-autocomplete-loading { background: white url('/vh/static/images/ui-anim_basic_16x16.gif') right center no-repeat; }
	</style>
	<script>
	$(function() {
		function log( message ) {
			$( "<div/>" ).text( message ).prependTo( "#log" );
			$( "#log" ).attr( "scrollTop", 0 );
		}

		$( "#categories" ).autocomplete({
			source: "/backend/autocomplete",
			minLength: 1,
			select: function( event, ui ) {
				log( ui.item ?
					"Selected: " + ui.item.value + " aka " + ui.item.id :
					"Nothing selected, input was " + this.value );
			}
		});
	});
	</script>
{% endblock scripts %}

{% block content %}
{% include "backend/autocomplete.html" %}
{% endblock content %}